#!/bin/bash
cd -- "$( dirname -- "$0" )"

if [ $# -ne 1 ]; then
  echo "Usage $0 [-development | -production]"
  exit 1
fi

if [ "$1" == "-production" ]; then
  mode="production"
  export TF_CPP_MIN_LOG_LEVEL='3'
else
  mode="development"
  export TF_CPP_MIN_LOG_LEVEL='0'
fi

export NODE_ENV=$mode
set -a
source ./src/config/.env
source ./src/config/.env.$mode
set +a
source ./.venv/bin/activate

echo "Starting server in $mode mode..."

if [ $mode == "production" ]; then
  (trap 'kill 0' SIGINT; python3 ./src/ml.py & npx tsx ./src/api.ts & npx tsx ./src/media.ts & npx tsx ./src/website.ts)
else
  (trap 'kill 0' SIGINT; python3 ./src/ml.py & npx tsx watch ./src/api.ts & npx tsx watch ./src/media.ts & npx tsx watch ./src/website.ts)
fi

echo
echo "Server stopped"